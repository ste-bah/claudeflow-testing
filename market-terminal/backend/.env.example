# ===================================================================
# Market Terminal Environment Configuration
# ===================================================================
# Copy this file to .env and fill in your values
# All fields are optional; app will degrade gracefully if keys are missing
# ===================================================================

# ===================================================================
# API Keys (Third-Party Services)
# ===================================================================

# Finnhub Stock Data API
# Get free key at: https://finnhub.io/register
# Provides: ticker price, earnings, dividends, IPO data
FINNHUB_API_KEY=

# FRED (Federal Reserve Economic Data)
# Get free key at: https://fred.stlouisfed.org/docs/api/api_key.html
# Provides: macro data (GDP, inflation, unemployment, etc.)
FRED_API_KEY=

# Alpha Vantage Stock Data (Fallback)
# Get free key at: https://www.alphavantage.co/
# Provides: price data if Finnhub is unavailable
ALPHA_VANTAGE_API_KEY=

# Massive.com Options Data
# Get key at: https://www.massive.com/pricing
# Provides: options chains, expirations, contract quotes
# Leave blank to disable options features
MASSIVE_API_KEY=

# ===================================================================
# Massive.com Configuration (TASK-UPDATE-001)
# ===================================================================

# Rate limit tier:
#   free:      5 requests/minute (default, no API key required)
#   starter:   6000 requests/minute
#   developer: 6000 requests/minute
#   advanced:  6000 requests/minute
#   paid:      6000 requests/minute
# Default: free
MASSIVE_OPTIONS_TIER=free

# ===================================================================
# SEC EDGAR Configuration
# ===================================================================

# User-Agent string for SEC EDGAR API
# Required per SEC API ToS; identify your application
# Example: "MyApp user@example.com"
# Default: "MarketTerminal user@example.com"
SEC_EDGAR_USER_AGENT=MarketTerminal user@example.com

# ===================================================================
# Server Configuration
# ===================================================================

# Backend server host and port
# Default: 0.0.0.0:8000
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend server port (for CORS)
# Default: 3000
FRONTEND_PORT=3000

# CORS allowed origins
# Comma-separated; required for frontend requests
# Default: http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# ===================================================================
# Database Configuration
# ===================================================================

# SQLite database file path (relative to project root)
# Default: data/market_terminal.db
DATABASE_PATH=data/market_terminal.db

# ===================================================================
# Cache Configuration
# ===================================================================

# Cache TTL (Time-To-Live) in seconds
# Controls how long data is cached before being refreshed

# Price data (stock tickers)
CACHE_TTL_PRICE=600

# Fundamental data (earnings, dividends, etc.)
CACHE_TTL_FUNDAMENTALS=600

# News articles
CACHE_TTL_NEWS=600

# Macro data (GDP, inflation, unemployment)
CACHE_TTL_MACRO=600

# COT (Commitments of Traders) data
CACHE_TTL_COT=600

# Ownership data (insiders, institutions)
CACHE_TTL_OWNERSHIP=600

# Insider trading data
CACHE_TTL_INSIDER=600

# Technical analysis results
CACHE_TTL_ANALYSIS=600

# Options chain data
CACHE_TTL_OPTIONS=600

# Economic Calendar data
CACHE_TTL_ECONOMIC_CALENDAR=600

# ===================================================================
# Circuit Breaker Configuration
# ===================================================================

# Failure threshold before circuit opens
# Default: 3 (after 3 consecutive failures, circuit opens)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3

# Time window for failure counting (seconds)
# Default: 300 (5 minutes)
CIRCUIT_BREAKER_WINDOW_SECONDS=300

# Cooldown before attempting recovery (seconds)
# Default: 900 (15 minutes)
CIRCUIT_BREAKER_COOLDOWN_SECONDS=900

# ===================================================================
# Sentiment Analysis Configuration
# ===================================================================

# Use lightweight sentiment model
# true:  Fast, low memory (dictionary-based)
# false: Accurate (FinBERT transformer model) - requires 2GB+ RAM
# Default: false
SENTIMENT_USE_LIGHTWEIGHT=false

# ===================================================================
# Logging Configuration
# ===================================================================

# Log level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO
