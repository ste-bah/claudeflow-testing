# Market Terminal Configuration
# Copy this file to .env and fill in your API keys

# === API Keys (all free) ===

# Finnhub (PRIMARY data source) - Get free key at https://finnhub.io/register
# Required for: price data, company news, economic calendar
# Rate limit: 60 calls/min on free tier
FINNHUB_API_KEY=


# FRED (Federal Reserve Economic Data) - Get free key at https://fred.stlouisfed.org/docs/api/api_key.html
# Required for: macro economic data (CPI, GDP, unemployment, etc.)
# Rate limit: no limit
FRED_API_KEY=

MASSIVE_API_KEY=

# Alpha Vantage (GAP-FILL data source) - Get free key at https://www.alphavantage.co/support/#api-key
# Optional: used as fallback when Finnhub and yfinance both fail
# Rate limit: 25 calls/day on free tier
ALPHA_VANTAGE_API_KEY=

# === SEC EDGAR Configuration ===
# SEC requires a User-Agent header with contact info (no API key needed)
# Format: "CompanyName AdminEmail" e.g., "MarketTerminal admin@example.com"
SEC_EDGAR_USER_AGENT=MarketTerminal name@example.com

# === Server Configuration ===
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8099
FRONTEND_PORT=3005
# Frontend browser-side (Vite only exposes VITE_ prefixed vars to client code)
VITE_BACKEND_PORT=8099
VITE_FRONTEND_PORT=3005

# === Database Configuration ===
# Path to SQLite database file (relative to market-terminal/ root)
DATABASE_PATH=data/market_terminal.db

# === Cache TTL (seconds) ===
CACHE_TTL_PRICE=600             # 10 minutes
CACHE_TTL_FUNDAMENTALS=600      # 10 minutes
CACHE_TTL_NEWS=600              # 10 minutes
CACHE_TTL_MACRO=600             # 10 minutes
CACHE_TTL_COT=600               # 10 minutes
CACHE_TTL_OWNERSHIP=600         # 10 minutes
CACHE_TTL_INSIDER=600           # 10 minutes
CACHE_TTL_ANALYSIS=600          # 10 minutes
CACHE_TTL_OPTIONS=600           # 10 minutes
CACHE_TTL_ECONOMIC_CALENDAR=600 # 10 minutes

# === Circuit Breaker Configuration ===
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3    # failures before tripping
CIRCUIT_BREAKER_WINDOW_SECONDS=300     # 5 minute window
CIRCUIT_BREAKER_COOLDOWN_SECONDS=900   # 15 minute cooldown

# === FinBERT Configuration ===
# Set to "true" to use lightweight Loughran-McDonald dictionary instead of FinBERT
# Useful on machines with limited RAM (FinBERT needs ~2GB)
SENTIMENT_USE_LIGHTWEIGHT=false

# === Logging ===
LOG_LEVEL=INFO